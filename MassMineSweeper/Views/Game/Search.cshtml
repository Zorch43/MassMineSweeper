@model IEnumerable<MassMineSweeper.Models.MineSweeperGame>

@{
    ViewBag.Title = "Search";
}
@Html.Partial("AuthorizePartial")
<h2>Search</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Search Game Title:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("searchTerm")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GameName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameWidth) x @Html.DisplayNameFor(model => model.GameHeight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumMines)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GameName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GameWidth) x @Html.DisplayFor(modelItem => item.GameHeight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumMines)
        </td>
        <td>
            @Html.ActionLink("Play", "Play", new { id=item.MineSweeperGameID }) -
            @Html.ActionLink("Delete", "Delete", new { id = item.MineSweeperGameID }) 
        </td>
    </tr>
}

</table>
